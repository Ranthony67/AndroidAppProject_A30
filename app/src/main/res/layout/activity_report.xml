<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="appprojgrp_nineteen.det_brugerinddragende_hospital.ReportActivity"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:clickable="true" >

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:width="135dp"
            android:backgroundTint="@color/buttonBackgroundTint"
            android:text="@string/save"
            android:textColor="@color/buttonTextColor" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:width="135dp"
            android:backgroundTint="@color/buttonCancelBackgroundTint"
            android:text="@string/cancel"
            android:textColor="@color/buttonTextColor" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/report_activity.what_have_you_done_today"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnMedicine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/buttonBackgroundTint"
            android:text="@string/report_activity.medicine"
            android:textColor="@color/buttonTextColor" />

        <Button
            android:id="@+id/btnFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnMedicine"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/buttonBackgroundTint"
            android:text="@string/report_activity.food"
            android:textColor="@color/buttonTextColor" />

        <Button
            android:id="@+id/btnDiaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnFood"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/buttonBackgroundTint"
            android:text="@string/report_activity.changed_diaper"
            android:textColor="@color/buttonTextColor" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnDiaper"
            android:layout_marginTop="22dp"
            android:text="@string/report_activity.comment"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/txtComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:height="140dp"
            android:gravity="top"
            android:layout_marginBottom="50dp" />

    </RelativeLayout>


</ScrollView>
